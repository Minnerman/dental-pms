# Copy to .env and adjust if needed.

# Required for docker compose database/backend wiring.
POSTGRES_DB=dental_pms
POSTGRES_USER=dental_pms
POSTGRES_PASSWORD=change-me
POSTGRES_PORT=5432

# Required for local service ports.
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Required backend runtime/auth settings.
APP_ENV=development
SECRET_KEY=change-me-to-a-long-random-string-change-me
JWT_SECRET=change-me-to-a-long-random-string
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
RESET_TOKEN_EXPIRE_MINUTES=30
RESET_TOKEN_DEBUG=false
RESET_REQUESTS_PER_MINUTE=5
RESET_CONFIRM_PER_MINUTE=10

# Required for bootstrap admin and ops auth checks.
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!

# Feature flags (safe defaults).
FEATURE_CHARTING_VIEWER=false
ENABLE_TEST_ROUTES=false
NEXT_PUBLIC_FEATURE_CHARTING_VIEWER=0
REQUIRE_CHARTING_PARITY=0

# Optional frontend/runtime overrides.
NEXT_PUBLIC_API_BASE=/api
FRONTEND_BASE_URL=http://localhost:3000
BACKEND_BASE_URL=http://localhost:8000

# Optional docs/links.
APP_BASE_URL=http://localhost:3000

# R4 SQL Server (SELECT-only policy, enable only when configured).
R4_SQLSERVER_ENABLED=false
R4_SQLSERVER_READONLY=true
R4_SQLSERVER_HOST=sql.example.local
R4_SQLSERVER_PORT=1433
R4_SQLSERVER_DATABASE=sys2000
# Legacy alias (use R4_SQLSERVER_DATABASE instead).
R4_SQLSERVER_DB=sys2000
R4_SQLSERVER_USER=readonly_user
R4_SQLSERVER_PASSWORD=change-me
R4_SQLSERVER_DRIVER="ODBC Driver 18 for SQL Server"
R4_SQLSERVER_ENCRYPT=true
R4_SQLSERVER_TRUST_SERVER_CERT=false
# Legacy alias (use R4_SQLSERVER_TRUST_SERVER_CERT instead).
R4_SQLSERVER_TRUST_CERT=false
R4_SQLSERVER_TIMEOUT_SECONDS=8
